@model Employee
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-6">
            <form asp-area="admin" asp-controller="Employee" asp-action="Create" method="post">
                <div class="form-group mb-3">
                    <label asp-for="@Model.Name">Name</label>
                    <input type="text" asp-for="@Model.Name" class="form-control">
                </div>

                <div class="form-group mb-3">
                    <label asp-for="@Model.Surname">Surname</label>
                    <input type="text" asp-for="@Model.Surname" class="form-control">
                </div>

                <div class="form-group mb-3">
                    <label asp-for="@Model.Email">Email</label>
                    <input type="text" asp-for="@Model.Email" class="form-control">
                </div>

                <div class="form-group mb-3">
                    <label asp-for="@Model.Age">Age</label>
                    <input asp-for="@Model.Age" class="form-control">
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.PositionId" class="form-label">Position</label>
                    <select class="form-control" asp-for="@Model.PositionId" asp-items="@(new SelectList(ViewBag.Position, "Id", "Name"))">
                        <option selected>Select Position</option>
                    </select>
                </div>

                <button type="submit" class="btn btn-primary">Add +</button>
            </form>

        </div>
    </div>
</div>

